<div class="container">
  <h1>New game</h1>

  <% @letters.each do |letter| %>
  <%= letter %>
  <% end %>

  <p>What's the longest word you can find?</p>

  <form action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Type in your word">
    <input type="hidden" name="letters" value="<%= @letters.join %>">
    <input type="submit" value="Submit">
  </form>
</div>
